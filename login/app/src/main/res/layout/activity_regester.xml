<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".regester">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup"
        android:text="Sign Up"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/fname"
        android:text="First name"
        app:layout_constraintTop_toBottomOf="@+id/signup"
        app:layout_constraintStart_toStartOf="@+id/signup"
        android:layout_marginTop="50dp"/>

    <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/lname"
            android:text="Last name"
            app:layout_constraintStart_toEndOf="@+id/signup"
            app:layout_constraintBottom_toBottomOf="@+id/fname"
            android:layout_marginLeft="50dp"/>

    <EditText
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:id="@+id/mail"
        android:text="E-mail"
        app:layout_constraintStart_toStartOf="@+id/fname"
        app:layout_constraintTop_toBottomOf="@id/fname"
        android:layout_marginTop="5dp"
        />

    <EditText
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:id="@+id/pw"
        android:text="Password"
        app:layout_constraintStart_toStartOf="@+id/mail"
        app:layout_constraintTop_toBottomOf="@+id/mail"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt1"
        android:text="At least 8 character and 1 digit"
        android:textColor="#FF0000"
        app:layout_constraintStart_toStartOf="@+id/signup"
        app:layout_constraintTop_toBottomOf="@+id/pw"
        android:layout_marginTop="5dp"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/box1"
        android:text="Remember me"
        app:layout_constraintStart_toStartOf="@+id/txt1"
        app:layout_constraintTop_toBottomOf="@+id/txt1"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn1"
        android:text="REGESTER"
        app:layout_constraintStart_toStartOf="@+id/box1"
        app:layout_constraintTop_toBottomOf="@+id/box1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt2"
        android:text="Have an account?"
        app:layout_constraintStart_toStartOf="@+id/btn1"
        app:layout_constraintTop_toBottomOf="@+id/btn1"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="100dp"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOG IN"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:layout_constraintStart_toEndOf="@+id/txt2"
        app:layout_constraintTop_toBottomOf="@id/btn1"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="15dp"/>






</androidx.constraintlayout.widget.ConstraintLayout>